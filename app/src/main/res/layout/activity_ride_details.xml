<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAP -->
    <fragment
        android:id="@+id/mapDetails"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- BOTTOM INFO CARD -->
    <LinearLayout
        android:id="@+id/bottomCard"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bottomcard_bg"
        android:padding="16dp"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rider name -->
        <TextView
            android:id="@+id/tvRiderName"
            android:text="Rider Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Route -->
        <TextView
            android:id="@+id/tvRoute"
            android:text="Pickup → Drop"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TIME + MATCH ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Left : Time & Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTime"
                    android:text="12:54 pm"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAmount"
                    android:text="₹200"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Right : MATCH % BOX -->
            <TextView
                android:id="@+id/tvMatchPercent"
                android:text="72%\nMatch"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#9C6B1F"
                android:gravity="center"
                android:background="@drawable/bgmatch_box"
                android:layout_width="72dp"
                android:layout_height="72dp" />
        </LinearLayout>

        <!-- Status (hidden by default) -->
        <TextView
            android:id="@+id/tvStatus"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Request button -->
        <Button
            android:id="@+id/btnRequestSeat"
            android:text="Request Seat"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/white" />

    </LinearLayout>

</FrameLayout>
