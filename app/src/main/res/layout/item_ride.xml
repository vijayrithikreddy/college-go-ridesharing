<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="6dp"
    app:cardCornerRadius="25dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Rider Name -->
        <TextView
            android:id="@+id/tvRiderName"
            android:text="Rider Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Route -->
        <TextView
            android:id="@+id/tvRoute"
            android:text="Pickup â†’ Drop"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- TIME + AMOUNT + MATCH ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- LEFT : Time + Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTime"
                    android:text="Time"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:text="Amount"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- RIGHT : MATCH BOX -->
            <TextView
                android:id="@+id/tvMatch"
                android:text="79%\nMatch"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#9C6B1F"
                android:gravity="center"
                android:background="@drawable/bgmatch_box"
                android:layout_width="72dp"
                android:layout_height="72dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
